deploy_yaml(
    yaml=kustomize("."),
    name="init"
)

if bool(env("GPU_AWS")):
    deploy_yaml(
        yaml=kustomize("./gpu/base"),
        name="nvidia-plugin"
    )

    deploy_yaml(
        yaml=kustomize("./gpu/base/aws"),
        name="gpu-aws"
    )

if bool(env("GPU_GKE")):
    deploy_yaml(
        yaml=kustomize("./gpu/base"),
        name="nvidia-plugin"
    )

    deploy_yaml(
        yaml=kustomize("./gpu/base/gke"),
        name="gpu-gke"
    )